          <%= f.input :message, label_html: { class: "d-none" }, placeholder: "Comment here...", class: "review" %>
        </div>
        <div class="modal-footer">

        <%= f.button :submit, value:"Add a comment", class: "btn" %>
        </div>
      <% end %>
    </div>
    </div>
