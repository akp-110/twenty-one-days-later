<div class="form-group">
<h2>Your Goals</h2>
</div>
<% @goals.each do |goal| %>
  <div class="form-group">
    <h3><%= goal.name %></h3>
<p><strong>Start Date:</strong> <%= goal.start_date.present? ? goal.start_date.strftime("%d %b %Y") : "Not set" %></p>
  </div>

  <div class="form-group">
     <p><%= goal.reason %></p>
  </div>

  <div class="form-group">
    <%= link_to "Edit", edit_group_goal_path(goal.group, goal), class: "btn btn-primary" %>
  </div>

  <div class="form-group">
    <%= link_to "Delete", group_goal_path(goal.group, goal), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-secondary" %>
  </div>
<% end %>

 <div class="form-group">
  <%= link_to "Start Your Journey", new_group_goal_path(@group), class: "btn btn-success" %>
 </div>
