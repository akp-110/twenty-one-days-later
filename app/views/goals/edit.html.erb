<div class="form-container">

<div class="form-title">
 <h1>Edit Your Goal</h1>
</div>

<%= form_with(model: @goal, url: group_goal_path(@goal.group, @goal), method: :patch, local: true) do |f| %>
<div class="form-group">
  <%= f.label :name, "Goal Name" %>
  <%= f.text_field :name %>
</div>

<div class="form-group">
  <%= f.label :reason, "Why is this goal important?" %>
  <%= f.text_area :reason %>
</div>

<div class="form-group">
      <%= f.label :start_date, "Start Date" %>
      <%= f.date_field :start_date, class: "form-control" %>
</div>

<div class="form-actions">
  <%= f.submit "Update Goal", class: "btn btn-success" %>
  </div>

<% end %>
</div>
