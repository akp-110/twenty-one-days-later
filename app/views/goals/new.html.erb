<div class="form-container">
<div class="form-title">
<h2>Create a New Goal</h2>
</div>

<%= form_with(model: @goal, url: group_goals_path(@group), method: :post) do |f| %>
  <div class="form-group">
    <%= f.label :group_id, "Select a Group" %>
    <%= f.collection_select :group_id, current_user.groups, :id, :name, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name, "Goal Name" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :reason, "Why is this goal important to you?" %>
    <%= f.text_area :reason, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :start_date, "Start Date" %>
    <%= f.date_field :start_date, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Lock It In", class: "btn btn-success" %>
  </div>
<% end %>
</div>
